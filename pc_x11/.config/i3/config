#Green
set $ActiveBorderColor #929d5c
set $InactiveBorderColor #4a583f

set $win Mod4
set $alt Mod1
set $ctrl control


# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Ubuntu 10
#font pango:DejaVu Sans Mono 8

#Floating Windows
floating_minimum_size 75 x 50
floating_maximum_Size 1880 x 1075

#Borders
smart_borders on
default_border pixel 3
default_floating_border pixel 3
hide_edge_borders both

mouse_warping none

#Colors
client.focused $ActiveBorderColor #285577 #ffffff $ActiveBorderColor $ActiveBorderColor
client.focused_inactive $InactiveBorderColor #285577 #ffffff $InactiveBorderColor $InactiveBorderColor
client.unfocused $InactiveBorderColor #285577 #ffffff $InactiveBorderColor $InactiveBorderColor
client.urgent $ActiveBorderColor #285577 #ffffff $ActiveBorderColor $ActiveBorderColor
client.placeholder $ActiveBorderColor #285577 #ffffff $ActiveBorderColor $ActiveBorderColor

# Use Mouse+$win to drag floating windows to their wanted position
floating_modifier $win

# start a terminal
bindsym $win+Return exec i3-sensible-terminal

# kill focused window
bindsym $win+Shift+q kill

# start dmenu (a program launcher)
#bindsym $win+d exec dmenu_run
bindsym $win+d exec rofi -show
bindsym $win+c exec rofi -show calc -modi calc -no-show-match -no-sort

# alternatively, you can use the cursor keys:
bindsym $win+Left focus left
bindsym $win+Down focus down
bindsym $win+Up focus up
bindsym $win+Right focus right

# alternatively, you can use the cursor keys:
bindsym $win+Shift+Left move left
bindsym $win+Shift+Down move down
bindsym $win+Shift+Up move up
bindsym $win+Shift+Right move right

# split in horizontal orientation
bindsym $win+h split h

# split in vertical orientation
bindsym $win+v split v

# enter fullscreen mode for the focused container
bindsym $win+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $win+s layout stacking
bindsym $win+w layout tabbed
bindsym $win+e layout toggle split

# toggle tiling / floating
bindsym $win+space floating toggle

# change focus between tiling / floating windows
bindsym $win+Shift+space focus mode_toggle

# focus the parent container
bindsym $win+a focus parent

# focus the child container
#bindsym $win+d focus child

